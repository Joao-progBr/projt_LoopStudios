  "license": "ISC",
  "description": "",
  "devDependencies": {
    "chokidar-cli": "^3.0.0",
    "concurrently": "^9.2.0",
    "cpy-cli": "^5.0.0",
    "sass": "^1.90.0",
    "terser": "^5.43.1"
  }
}
